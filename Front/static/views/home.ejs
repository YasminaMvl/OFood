<%- include ("partials/header") %>


<link rel="stylesheet" href="/css/home.css" />


<h1 class="title_popular_recipes">
  <br>
  Les <span class="cinq"> 5 </span>recettes les plus simple à faire 
</h1>




<div class="container">
  <% difficultyRecipe.forEach((recipe) => { %>



  <div class="carte">
    <div class="divImg">
      <img src="img/recipes/<%= recipe.picture %>" alt="recipes">

    </div>

    <div class="titre"> <%= recipe.title %> </div>

    <div class="tab">
      <img src="/img/sablier.svg" alt="sablier" class="icone" />
      <span><%= recipe.cookingTime %></span>
    </div>
    <div class="tab">
    <div id="moncercle"> <%= recipe.rate %> </div>
    </div>
    <div class="tab">
      <img src="/img/difficulty.svg" alt="difficulty" class="icone" />
      <span><%= recipe.difficulty %> </span>
    </div>

    <div class="info">
      <p> <%= recipe.description %> </p>
    </div>

    <div class="btnSection">
      <a href="/recettes/<%=recipe.id %>">La recette</a>

    </div>

  </div>
  
  <% }) %>


</div>


